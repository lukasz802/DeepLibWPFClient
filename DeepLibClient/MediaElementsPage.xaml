                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ClearBaseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter VerticalAlignment="Stretch"
                                              HorizontalAlignment="Stretch"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SearchCheckBox" TargetType="CheckBox">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <ContentPresenter VerticalAlignment="Stretch" 
                                              HorizontalAlignment="Stretch"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource MenuActiveListColorBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid VerticalAlignment="Center" Margin="0,0,-1,0" 
                  x:Name="MediaInfoGrid" Visibility="Visible">
                <Grid.Background>
                    <SolidColorBrush Color="#FF4F4F4F"
                                     Opacity="0.90"/>
                </Grid.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column ="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12*"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TabControl Background="Transparent" x:Name="CoverTabControl"
                                    BorderThickness="0" Margin="-3,-4,-3,-2" Grid.Column="0"
                                    HorizontalAlignment="Right" Height="350"
                                    VerticalAlignment="Stretch">
                            <TabItem Visibility="Collapsed" x:Name="DefaultCoverTabItem">
                                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <Grid.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <LinearGradientBrush.GradientStops>
                                                <GradientStop Color="#FF2C4171" Offset="0"/>
                                                <GradientStop Color="#FF1F82EE" Offset="1"/>
                                            </LinearGradientBrush.GradientStops>
                                        </LinearGradientBrush>
                                    </Grid.Background>
                                    <Image Margin="70" VerticalAlignment="Center"
                                           HorizontalAlignment="Center">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="Icons/bookCover.png"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.MediaType}" Value="1">
                                                        <Setter Property="Source" Value="Icons/dvdCover.png"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.MediaType}" Value="0">
                                                        <Setter Property="Source" Value="Icons/cdCover.png"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Grid>
                            </TabItem>
                            <TabItem Visibility="Collapsed" x:Name="CustomCoverTabItem">
                                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <Image VerticalAlignment="Center" Panel.ZIndex="1"
                                           Source="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.Cover}"/>
                                    <Grid.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <LinearGradientBrush.GradientStops>
                                                <GradientStop Color="#FF2C4171" Offset="0"/>
                                                <GradientStop Color="#FF1F82EE" Offset="1"/>
                                            </LinearGradientBrush.GradientStops>
                                        </LinearGradientBrush>
                                    </Grid.Background>
                                </Grid>
                            </TabItem>
                            <TabControl.Style>
                                <Style TargetType="TabControl">
                                    <Setter Property="SelectedIndex" Value="1"/>
                                    <Setter Property="Width" Value="Auto"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.Cover}" Value="{x:Null}">
                                            <Setter Property="SelectedIndex" Value="0"/>
                                            <Setter Property="Width" Value="280"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsAzureAvailable}" Value="False">
                                            <Setter Property="SelectedIndex" Value="0"/>
                                            <Setter Property="Width" Value="280"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TabControl.Style>
                        </TabControl>
                        <Button Width="58" Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}"
                                VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" x:Name="CloudButton"
                                Opacity="0" Command="{Binding UploadCoverCommand}" 
                                CommandParameter="{Binding ElementName=MyLibraryListBox, Path=SelectedItem}">
                            <Button.Style>
                                <Style BasedOn="{StaticResource UploadButton}" TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="ToolTip" Value="Zaktualizuj okładkę za pośrednictwem usługi Azure Storage"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAzureAvailable}" Value="False">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.Cover}" Value="{x:Null}"/>
                                                <Condition Binding="{Binding IsAzureAvailable}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="ToolTip" Value="Dodaj okładkę w usłudze Azure Storage"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard TargetName="CloudButton">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard TargetName="CloudButton">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                        </Grid.Triggers>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid VerticalAlignment="Stretch" Grid.Row="1" Margin="0,0,20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MaxHeight="300"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock Text="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.Title}" TextTrimming="CharacterEllipsis" MaxHeight="120"
                                           Style="{StaticResource MediaElementInfoTextBlock}" FontSize="35" Margin="0,10,0,15" TextWrapping="Wrap"/>
                            </Grid>
                            <Grid Grid.Row="1" Margin="0,0,0,-7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Top">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource MediaElementInfoTextBlock}">
                                            <Setter Property="Text" Value="Reżyseria:"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.MediaType}" Value="2">
                                                    <Setter Property="Text" Value="Autor:"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.MediaType}" Value="0">
                                                    <Setter Property="Text" Value="Wykonawca:"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.Creator.Name}"
                                               Style="{StaticResource MediaElementInfoTextBlock}" TextTrimming="CharacterEllipsis" 
                                               Grid.Column="0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.Creator.Surname}"
                                               Style="{StaticResource MediaElementInfoTextBlock}" 
                                               TextTrimming="CharacterEllipsis" 
                                               Grid.Column="1" Margin="-6,0,10,0"
                                               VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2" Margin="0,0,0,-7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Top">
                                    <TextBlock.Style>
                                        <Style BasedOn="{StaticResource MediaElementInfoTextBlock}" TargetType="TextBlock">
                                            <Setter Property="Text" Value="Rok produkcji:"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.MediaType}" Value="2">
                                                    <Setter Property="Text" Value="Rok publikacji:"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.MediaType}" Value="0">
                                                    <Setter Property="Text" Value="Rok wydania:"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.Year}" Style="{StaticResource MediaElementInfoTextBlock}" 
                                           TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Grid.Column="1"
                                           VerticalAlignment="Stretch"/>
                            </Grid>
                            <Grid Grid.Row="3" Margin="0,0,0,-7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Status elementu:" Style="{StaticResource MediaElementInfoTextBlock}" Grid.Column="0" VerticalAlignment="Top"/>
                                <TextBlock TextWrapping="Wrap" Grid.Column="1"
                                           TextTrimming="CharacterEllipsis" VerticalAlignment="Stretch">
                                    <TextBlock.Style>
                                        <Style BasedOn="{StaticResource MediaElementInfoTextBlock}" TargetType="TextBlock">
                                            <Setter Property="Text" Value="Na półce"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.IsBorrowed}" Value="True">
                                                    <Setter Property="Text" Value="Wypożyczony"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Grid Grid.Row="4" Margin="0,0,0,-7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Wypożyczający:" Style="{StaticResource MediaElementInfoTextBlock}" Grid.Column="0" VerticalAlignment="Top"/>
                                <TextBlock x:Name="WhoBorrowedTextBlock" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Grid.Column="1" Style="{StaticResource MediaElementInfoTextBlock}"
                                           Text="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.UserLoginWhoChangedStatus}" VerticalAlignment="Stretch"/>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=WhoBorrowedTextBlock, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                            </Grid>
                            <Grid Grid.Row="5" Margin="0,0,0,-7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Data wypożyczenia:" Style="{StaticResource MediaElementInfoTextBlock}" Grid.Column="0" VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.BorrowDate}" Style="{StaticResource MediaElementInfoTextBlock}" 
                                           TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Grid.Column="1"
                                           VerticalAlignment="Stretch" x:Name="BorrowDateTextBlock"/>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=BorrowDateTextBlock, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                            </Grid>
                            <Grid Grid.Row="6" Margin="0,0,0,-7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Komentarz:" Style="{StaticResource MediaElementInfoTextBlock}" Grid.Column="0" VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding ElementName=MyLibraryListBox, Path=SelectedItem.Comment}" Style="{StaticResource MediaElementInfoTextBlock}" 
                                           TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Grid.Column="1"
                                           VerticalAlignment="Stretch" x:Name="CommentTextBlock"/>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=CommentTextBlock, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=MyLibraryListBox, Path=SelectedItem}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" x:Name="ConnectionPropertiesGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="55" x:Name="ControlGrid"/>
                    <RowDefinition Height="0.8"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <c:SearchTextBox x:Name="SearchUserControl" SearchClick="SearchUserControl_SearchClick"
                                 Grid.Row="0" Margin="10,15,10,0" RemoveResultsClick="SearchUserControl_RemoveResultsClick"
                                 KeyDown="SearchUserControl_KeyDown"/>
                <Grid Margin="12,0,12,0" Grid.Row="1" x:Name="TitleGrid"
                      VerticalAlignment="Center" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Moja biblioteka" VerticalAlignment="Center" 
                           FontSize="24" x:Name="TitleLabel"/>
                    <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="65,5,0,0">
                            <Label Content="Sortuj wg:" FontSize="13" VerticalAlignment="Center"/>
                            <Button Margin="4,1,0,0" 
                                Click="SortButton_Click" Content="Z-A" ToolTip="Sortuj malejąco">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource SortContentButtonStyle}" TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="Content" Value="A-Z">
                                                <Setter Property="ToolTip" Value="Sortuj rosnąco"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Margin="12,0,12,0" Grid.Row="1" x:Name="SearchGrid"
                      VerticalAlignment="Center" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Wyniki wyszukiwania" VerticalAlignment="Center" 
                           FontSize="24" x:Name="SearchLabel"/>
                    <Grid Grid.Row="1" Margin="6.5,0,0,-8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
